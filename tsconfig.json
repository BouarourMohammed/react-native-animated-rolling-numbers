{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": ["node_modules", "lib"]
}
